{% extends '@MasterPeaceUpRead/HomePage/teacher.html.twig' %}

{% block page_wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'classroom.view.title'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('classroom_list') }}" class="btn btn-primary">{{ 'classroom.view.list.button'|trans }}</a>
            <a href="{{ path('classroom_edit', {'id': classroom.id}) }}"
               class="btn btn-info">{{ 'classroom.view.edit.button'|trans }}</a>
            <a href="{{ path('classroom_create') }}" class="btn btn-success">{{ 'classroom.view.create.button'|trans }}</a>
            <a href="{{ path('classroom_delete', {'id': classroom.id}) }}"
               class="btn btn-danger">{{ 'classroom.view.delete.button'|trans }}</a>
        </div>
    </div>
    <br />
{% endblock %}