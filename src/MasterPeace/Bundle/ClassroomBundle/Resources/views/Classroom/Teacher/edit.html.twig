{% extends '@MasterPeaceUpRead/UserLayout/teacher.html.twig' %}

{% block page_wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'classroom.edit.title'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('teacher_classroom_list') }}" class="btn btn-primary">{{ 'classroom.view.list.button'|trans }}</a>
            <a href="{{ path('teacher_classroom_create') }}"
               class="btn btn-success">{{ 'classroom.view.create.button'|trans }}</a>
            <a href="{{ path('teacher_classroom_delete', {'id': classroom.id}) }}"
               class="btn btn-danger confirmDelete" {{ delete_link(classroom.id) }}>{{ 'classroom.view.delete.button'|trans }}</a>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-info">{{ 'classroom.save.button.label'|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
