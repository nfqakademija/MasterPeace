{% extends '@MasterPeaceUpRead/HomePage/teacher.html.twig' %}

{% block page_wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'quiz.list.title'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('quiz_create') }}" class="btn btn-success">{{ 'quiz.list.create.button'|trans }}</a>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>{{ 'quiz.list.table.title.label'|trans }}</th>
                        <th>{{ 'quiz.list.table.book.label'|trans }}</th>
                        <th>{{ 'quiz.list.table.control.label'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for quiz in quizes %}
                        <tr>
                            <td>
                                <a href="{{ path('quiz_view', {'id': quiz.id}) }}">{{ quiz.title }}</a>
                            </td>
                            <td>
                                <a href="{{ path('book_view', {'id': quiz.book.id}) }}" target="_blank">{{ quiz.book.title }} ({{ quiz.book.year }})</a>
                            </td>
                            <td>
                                <a href="{{ path('quiz_view', {'id': quiz.id}) }}"
                                   class="btn btn-success btn-xs">{{ 'quiz.list.table.control.view.label'|trans }}</a>
                                <a href="{{ path('quiz_edit', {'id': quiz.id}) }}"
                                   class="btn btn-info btn-xs">{{ 'quiz.list.table.control.edit.label'|trans }}</a>
                                <a href="{{ path('quiz_delete', {'id': quiz.id}) }}"
                                   class="btn btn-danger btn-xs">{{ 'quiz.list.table.control.delete.label'|trans }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
