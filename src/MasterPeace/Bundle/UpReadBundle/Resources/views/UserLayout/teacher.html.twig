{% extends '@MasterPeaceUpRead/UserLayout/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin/metisMenu.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/admin/sb-admin-2.css') }}" rel="stylesheet">
    <link href="{{ asset('css/login/font-awesome.css') }}" rel="stylesheet">
    <link href="{{ asset('css/admin/sweetalert.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">{{ 'menu.navigation.label'|trans }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span style=" line-height: 55px; margin-left: 40px"><img src="{{ asset('images/logo/upread45.png') }}"></span>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <span style="color: #158cba">&nbsp;&nbsp;&nbsp;{{ app.user.name }} {{ app.user.surname }}
                    ({{ 'teacher.menu.role.label'|trans }})&nbsp;&nbsp;&nbsp;</span>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="{{ path('fos_user_security_logout') }}"><i
                                        class="fa fa-sign-out fa-fw"></i> {{ 'menu.logout.label'|trans }}</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="{{ path('teacher_classroom_list') }}"><i
                                        class="fa fa-tasks fa-fw"></i> {{ 'teacher.menu.classrooms.label'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('teacher_quiz_list') }}"><i
                                        class="fa fa-check fa-fw"></i> {{ 'teacher.menu.quizes.label'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('teacher_book_list') }}"><i
                                        class="fa fa-book fa-fw"></i> {{ 'teacher.menu.books.label'|trans }}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            {% block page_wrapper %}{% endblock %}
        </div>
        <!-- /#wrapper -->
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin/metisMenu.min.js') }}"></script>
    <script src="{{ asset('js/admin/sb-admin-2.js') }}"></script>
    <script src="{{ asset('js/admin/sweetalert.min.js') }}"></script>
    <script type="text/javascript">
        var translations = {
            'title': '{{ 'sweetAlert_title' | trans }}',
            'confirmButtonText': '{{ 'sweetAlert_confirmButtonText' | trans }}',
            'cancelButtonText': '{{ 'sweetAlert_cancelButtonText' | trans }}',
            'deleted': '{{ 'sweetAlert_deleted' | trans }}',
            'deletedText': '{{ 'sweetAlert_deletedText' | trans }}'
        }
    </script>
    <script src="{{ asset('js/admin/masterpeace.js') }}"></script>
{% endblock %}
