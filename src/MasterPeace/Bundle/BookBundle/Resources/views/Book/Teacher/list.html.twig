{% extends '@MasterPeaceUpRead/HomePage/teacher.html.twig' %}

{% block page_wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'book.list.title'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('teacher_book_create') }}" class="btn btn-success">{{ 'book.list.create.button'|trans }}</a>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>{{ 'book.list.table.isbn.label'|trans }}</th>
                        <th>{{ 'book.list.table.title.label'|trans }}</th>
                        <th>{{ 'book.list.table.author.label'|trans }}</th>
                        <th>{{ 'book.list.table.publisher.label'|trans }}</th>
                        <th>{{ 'book.list.table.control.label'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for book in books %}
                        <tr>
                            <td>
                                {{ book.isbnCode }}
                            </td>
                            <td>
                                <a href="{{ path('teacher_book_view', {'id': book.id}) }}">{{ book.title }} ({{ book.year }})</a>
                            </td>
                            <td>
                                {{ book.author }}
                            </td>
                            <td>
                                {{ book.publisher }}
                            </td>
                            <td>
                                <a href="{{ path('teacher_book_view', {'id': book.id}) }}"
                                   class="btn btn-success btn-xs">{{ 'book.list.table.control.view.label'|trans }}</a>
                                <a href="{{ path('teacher_book_edit', {'id': book.id}) }}"
                                   class="btn btn-info btn-xs">{{ 'book.list.table.control.edit.label'|trans }}</a>
                                <a href="{{ path('teacher_book_delete', {'id': book.id}) }}"
                                   class="btn btn-danger btn-xs">{{ 'book.list.table.control.delete.label'|trans }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
