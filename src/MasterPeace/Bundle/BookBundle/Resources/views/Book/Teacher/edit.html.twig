{% extends '@MasterPeaceUpRead/UserLayout/teacher.html.twig' %}

{% block page_wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'book.edit.title'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('teacher_book_list') }}" class="btn btn-primary">{{ 'book.edit.list.button'|trans }}</a>
            <a href="{{ path('teacher_book_create') }}" class="btn btn-success">{{ 'book.edit.create.button'|trans }}</a>
            <a href="{{ path('teacher_book_delete', {'id': book.id}) }}"
               class="btn btn-danger" data-delete-token="{{ csrf_token(book.title ~ book.id) }}">{{ 'book.edit.delete.button'|trans }}</a>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-info">{{ 'book.save.button.label'|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
