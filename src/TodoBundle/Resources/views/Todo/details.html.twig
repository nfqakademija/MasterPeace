{% extends 'TodoBundle::todo.html.twig' %}

{%  block body %}
    <a href="/todo" class="btn btn-primary">Back to Todo List</a>
    <hr>
    <h2 class="page-header">{{ todo.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Category: {{ todo.category }}</li>
        <li class="list-group-item">Priority: {{ todo.priority }}</li>
        <li class="list-group-item">Due: {{ todo.dueDate|date('F j, Y, g:i a') }}</li>
    </ul>
    <p>
        {{ todo.description }}
    </p>
{% endblock %}